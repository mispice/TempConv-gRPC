# Stage 1: Build the Go application
FROM golang:1.21-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum* ./
RUN go mod download

# Copy source code
COPY . .

# Build the application
RUN go build -o tempconv-server ./server

# Stage 2: Create minimal runtime image
FROM alpine:latest

WORKDIR /app

# Copy the binary from builder
COPY --from=builder /app/tempconv-server .

# Expose gRPC port
EXPOSE 50051

# Run the server
CMD ["./tempconv-server"]
